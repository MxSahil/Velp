<%- include("partials/header") %>
<div class="container">
  <h1 class="pageTitle">Add a New Comment</h1>
  <form action="/games/<%= gameID %>/comments" method="POST">
    <div class="mt-3 form-group">
      <label for="description">Description</label>
      <textarea class="form-control" rows="6" name="text" placeholder="Description" required></textarea>
    </div>
    <input type="hidden" name="gameID" value="<%= gameID %>">
    <button type="submit" class="mt-3 btn btn-success">Submit Comment</button>
  </form>
</div>
<%- include("partials/footer") %>
